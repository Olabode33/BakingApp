<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/small_margin">
    <ImageView
        android:layout_width="@dimen/details_image_height"
        android:layout_height="@dimen/details_image_height"
        android:scaleType="centerCrop"
        android:id="@+id/iv_recipe_ingredient_image"
        android:src="@mipmap/ic_ingredient"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:id="@+id/tv_ingredient_name"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_gravity="center"
        android:textSize="@dimen/title_text_size"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/medium_margin"
        android:id="@+id/tv_ingredient_quantity"
        android:layout_gravity="center"
        android:textSize="@dimen/title_text_size"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="@dimen/medium_margin"
        android:id="@+id/tv_ingredient_measure"
        android:textSize="@dimen/title_text_size"
        android:layout_gravity="center"/>
</LinearLayout>